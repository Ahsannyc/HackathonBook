{
  "name": "hackathonbook-auth",
  "version": "1.0.0",
  "description": "Authentication system for HackathonBook using Better Auth",
  "main": "backend/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch backend/src --exec \"npm run build:backend && node backend/dist/server.js\"",
    "dev:frontend": "cd book && npm run start",
    "build": "npm run build:backend && npm run build:frontend || echo 'Frontend build optional'",
    "build:vercel": "cd book && npm run build:vercel",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "cd book && npm run build",
    "start": "node backend/dist/server.js",
    "test": "jest",
    "test:e2e": "cypress run",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "authentication",
    "better-auth",
    "github-pages",
    "typescript"
  ],
  "author": "HackathonBook Team",
  "license": "MIT",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "axios": "^1.13.2",
    "better-auth": "^1.4.7",
    "better-sqlite3": "^12.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "cypress": "^13.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
