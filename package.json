{
  "name": "hackathonbook-auth",
  "version": "1.0.0",
  "description": "Authentication system for HackathonBook using Better Auth",
  "main": "backend/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch backend/src --exec \"npm run build:backend && node backend/dist/server.js\"",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node backend/dist/server.js",
    "test": "jest",
    "test:e2e": "cypress run",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "authentication",
    "better-auth",
    "github-pages",
    "typescript"
  ],
  "author": "HackathonBook Team",
  "license": "MIT",
  "dependencies": {
    "better-auth": "^0.0.1-beta.13",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/cookie-parser": "^1.4.3",
    "jest": "^29.0.0",
    "cypress": "^13.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "nodemon": "^3.0.0",
    "concurrently": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}